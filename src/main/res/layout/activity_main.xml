<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B43838"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Select your meal"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <Spinner
            android:id="@+id/meal_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:entries="@array/meals"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/meal_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#E1E6E5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quantity"
    android:textColor="@color/colorPrimaryDark"/>

        <SeekBar
            android:id="@+id/quantity_seekbar"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:max="10"
            android:layout_marginLeft="40dp"
            app:tickMarkTint="#00897B" />
<TextView
    android:id="@+id/seekbar_text"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tip:"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:id="@+id/radio_group">

            <RadioButton
                android:id="@+id/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="10 %"

                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="15 %"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="20 %"
                android:textColor="@color/colorPrimary" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Total Price"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/total_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#E1E6E5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/logo" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">


        <CheckBox
            android:id="@+id/confirm"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Confirm your order for the best meal"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <Button
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Order"
        android:textColor="@color/colorPrimary" />


</LinearLayout>
















